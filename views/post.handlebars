<div class="row">
  {{#if (not_eq logged_user_id created_by)}}
    <div class="mt-5 mb-5">
            <a href="/api/posts/{{id}}/comment" class="border-2 border-indigo-700 bg-indigo-700 text-white py-1 px-5 w-52 rounded-md hover:bg-transparent hover:text-indigo-700 font-semibold">Add a comment</a>
    </div> 
  {{/if}}
<div class="border-2  border-cyan-700 pl-3 bg-indigo-700 text-lg text-white py-2 w-auto font-semibold rounded-t-md">
        {{title}}
      </div>
      <hr>
      <div class="w-auto p-6 shadow-lg bg-gray-400 rounded-b-md mb-5">
        <div class="mb-4">
          <p>
            {{description}}
          </p>
        </div>
        <div class="bg-blue-400 pl-1">
          <p>Created on {{format_date createdAt}}</p>
        </div>
    </div>
    Comments to this post:
        {{#each comments as |comment|}}
    <div class="w-auto p-6 shadow-lg bg-gray-400 rounded-b-md mb-5">
        
          <div><i>{{comment.description}}</i></div>
          <p>Created by {{comment.user.name}}</p>
          <p>Created on {{format_date comment.createdAt}}</p>
      </div>
      {{/each}}
</div>